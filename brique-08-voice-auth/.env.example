# Server Configuration
PORT=8081
NODE_ENV=development

# JWT Authentication
JWT_AUDIENCE=molam.id
JWT_ISSUER=https://id.molam.com
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"

# Encryption
DATA_ENC_KEY=your-32-byte-hex-key-here
KMS_KEY_ID=alias/molam-voice-auth

# Database
DATABASE_URL=postgresql://molam:molam_pass@localhost:5432/molam_id

# Redis
REDIS_URL=redis://localhost:6379

# S3 Storage (ephemeral audio, <24h retention)
S3_TEMP_BUCKET=molam-voice-temp
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Voice ML Microservice
VOICE_ML_URL=http://voice-ml:9000
VOICE_ML_TIMEOUT=5000

# Audio Limits
MAX_AUDIO_SEC=15
MAX_AUDIO_BYTES=4000000

# IVR Webhook (Twilio, Infobip, Africa's Talking)
IVR_WEBHOOK_SECRET=your-webhook-secret-here

# SIRA Integration
SIRA_ENABLED=true
SIRA_STREAM_NAME=sira_signals

# Monitoring
LOG_LEVEL=info
