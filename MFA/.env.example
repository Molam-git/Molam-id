# Server
PORT=8084
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/molam_mfa

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----

# OTP Configuration
OTP_TTL=180
OTP_LENGTH=6
MAX_OTP_ATTEMPTS=5

# Argon2
ARGON_TIME_COST=3
ARGON_MEMORY_COST=19456
ARGON_PARALLELISM=1

# TOTP
TOTP_STEP=30
TOTP_DIGITS=6
TOTP_ALGO=SHA1

# Recovery Codes
RECOVERY_CODES_COUNT=10

# Security
WEBHOOK_HMAC_SECRET=your-webhook-secret
KMS_KEY_ID=your-kms-key-id
LOCAL_ENC_KEY=local-encryption-key-32-chars

# WebAuthn
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Molam
WEBAUTHN_RP_ORIGIN=http://localhost:3000