# AuthZ API Configuration

# Server
PORT=4300
HOST=0.0.0.0
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=molam_id
DB_USER=postgres
DB_PASSWORD=postgres

# Performance
CACHE_TTL_SECONDS=300
MAX_DECISION_LATENCY_MS=50

# SIRA Integration
SIRA_API_URL=http://sira-service:5000
SIRA_ENABLED=true
SIRA_MIN_SCORE_THRESHOLD=70

# Policy
DEFAULT_POLICY_VERSION=v1.0

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Security
ENABLE_MTLS=false
MTLS_CERT_PATH=/certs/authz.crt
MTLS_KEY_PATH=/certs/authz.key
